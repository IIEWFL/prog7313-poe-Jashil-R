<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Goals"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Minimum Goal -->
        <EditText
            android:id="@+id/minGoalInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Minimum Goal (e.g. 1000.00)"
            android:inputType="numberDecimal" />

        <!-- Maximum Goal -->
        <EditText
            android:id="@+id/maxGoalInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Maximum Goal (e.g. 5000.00)"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <!-- Month Selection -->
        <EditText
            android:id="@+id/goalMonthEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Month (e.g. May)"
            android:inputType="textCapWords"
            android:layout_marginTop="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveGoalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Goal"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
